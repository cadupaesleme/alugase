@model AlugaSe.DomainModel.Entities.Rent

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Rent</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Customer</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span class="text-danger field-validation-valid hide" id="customer-validation"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h4 class="rent-title">Rent Items</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <input type="button" value="+ Item" class="btn btn-default btn-add-item" />
                    <span class="text-danger field-validation-valid hide" id="rent-item-validation"></span>
                </div>
            </div>


            <div class="items">

            </div>

            <div class="model hide">
                <div class="row rent-item">

                    <div class="col-lg-3">
                        <label class="control-label">Product</label>
                        <select class="form-control item-product">
                            <option data-price="0" value="-1">- Select -</option>
                            @foreach (var product in ViewBag.Product)
                            {
                                <option data-price="@product.UnitPrice" data-vendor="@product.Vendor.Id" value="@product.Id">@product.Name</option>
                            }
                        </select>
                        <span class="text-danger field-validation-valid hide rent-item-product-validation"></span>
                    </div>
                    <div class="col-lg-1">
                        <label class="control-label">Quantity</label>
                        <input type="number" class="form-control item-quantity" />
                        <span class="text-danger field-validation-valid hide rent-item-quantity-validation"></span>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">Initial Date</label>
                        <input type="date" class="form-control item-initial-date" />
                        <span class="text-danger field-validation-valid hide rent-item-initial-date-validation"></span>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">End Date</label>
                        <input type="date" class="form-control item-end-date" />
                        <span class="text-danger field-validation-valid hide rent-item-end-date-validation"></span>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">Unit Price p/Day</label>
                        <label type="number" class="form-control item-unit-price" lang="en-150" />
                    </div>

                    <div class="col-lg-1">
                        <label class="control-label item-remove">X</label>
                    </div>

                </div>
            </div>

            <div class="row spacing">
                <div class="col-lg-12">
                </div>
            </div>

            <div class="form-group">
                <input type="button" value="Create" data-route="@Url.Action("Create")" class="btn btn-default btn-save-rent" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>
    <script src="~/scripts/rent.js"></script>
}
