@model AlugaSe.DomainModel.Entities.Rent

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Rent</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt>
            Total
        </dt>
        <dd>
            @Model.Total
        </dd>
    </dl>

    <div class="row">
        <div class="col-lg-12">
            <h4 class="rent-title">Rent items</h4>
        </div>
    </div>

    <div class="items">

        @foreach (var item in Model.RentItems)
        {
        <div class="row pedido-item">

            <div class="col-lg-3">
                <label class="control-label">Product</label>
                <label type="number" class="form-control">@item.Product.Name</label>
            </div>
            <div class="col-lg-1">
                <label class="control-label">Quantity</label>
                <label type="number" class="form-control">@item.Quantity</label>
            </div>
            <div class="col-lg-2">
                <label class="control-label">Initial Date</label>
                <label type="date" class="form-control">@item.InitialDate.ToShortDateString()</label>
            </div>
            <div class="col-lg-2">
                <label class="control-label">End Date</label>
                <label type="date" class="form-control">@item.EndDate.ToShortDateString()</label>
            </div>
            <div class="col-lg-2">
                <label class="control-label">Unit Price</label>
                <label type="number" class="form-control item-valor-unitario">@item.UnitPrice</label>
            </div>
        </div>
        }

    </div>


</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
