@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active home-banner">
            <img src="~/images/lance-grandahl-598165-unsplash.jpg" alt="ASP.NET" class="img-responsive banner-rent" />
            <div class="carousel-caption" role="option">
                <p class="banner-subtitle">
                    Rent anything you want.
                    <a asp-area="" asp-controller="Rent" asp-action="Create" class="btn btn-default">Here</a>
                </p>
            </div>
        </div>
        <div class="item home-banner">
            <img src="~/images/alex-block-579639-unsplash.jpg" alt="ASP.NET" class="img-responsive banner-rent-home" />
            <div class="carousel-caption" role="option">
                <p class="banner-subtitle">
                    See available vendors.
                    <a asp-area="" asp-controller="Vendor" asp-action="Index" class="btn btn-default">Here</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Rents</h2>
        <p>
            See all orders.
        </p>
        <p>
            <a asp-area="" asp-controller="Rent" asp-action="Index" class="btn btn-default">Here</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Vendors</h2>
        <p>
            Available vendors.
        </p>
        <p>
            <a asp-area="" asp-controller="Vendor" asp-action="Index" class="btn btn-default">Here</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Rents</h2>
        <p>
            Create a new order.
        </p>
        <p>
            <a asp-area="" asp-controller="Rent" asp-action="Create" class="btn btn-default">Here</a>
        </p>
    </div>

</div>